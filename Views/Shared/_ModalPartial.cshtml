@model CodeGrade.ViewModels.ModalViewModel

<div id="@Model.Id" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full @Model.IconBgClass">
                <i class="@Model.IconClass text-xl"></i>
            </div>
            <h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">@Model.Title</h3>
            <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                    @Model.Message
                </p>
            </div>
            <div class="items-center px-4 py-3">
                <button id="@Model.CloseButtonId" class="px-4 py-2 @Model.ButtonClass text-white text-base font-medium rounded-md w-full shadow-sm hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-opacity-50 transition-opacity">
                    @Model.ButtonText
                </button>
            </div>
        </div>
    </div>
</div> 