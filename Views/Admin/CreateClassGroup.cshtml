@model CodeGrade.ViewModels.AdminClassGroupCreateViewModel
@{
    ViewData["Title"] = "Създаване на клас";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-plus-circle text-success me-2"></i>
                Създаване на нов клас
            </h1>
            <p class="text-muted mb-0">Добавете нов клас в системата</p>
        </div>
        <a asp-action="ClassGroups" class="btn btn-outline-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>
            Назад към списъка
        </a>
    </div>

    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-light rounded p-3">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Admin")" class="text-decoration-none">
                    <i class="fas fa-home me-1"></i>Админ панел
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("ClassGroups", "Admin")" class="text-decoration-none">
                    <i class="fas fa-users-cog me-1"></i>Класове
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-plus-circle me-1"></i>Нов клас
            </li>
        </ol>
    </nav>

    <!-- Main Form Card -->
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-users-cog me-2"></i>
                        Информация за класа
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateClassGroup" method="post" id="createClassGroupForm">
                        <!-- Basic Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-success mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Основна информация
                                </h6>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Въведете име на класа" />
                                    <label asp-for="Name">
                                        <i class="fas fa-users me-1"></i>Име на класа *
                                    </label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="fas fa-lightbulb me-1"></i>
                                        Например: 10А, 11Б, 12В
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Year" class="form-select">
                                        <option value="">Изберете година</option>
                                        @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 5; year--)
                                        {
                                            <option value="@year">@year - @(year + 1)</option>
                                        }
                                    </select>
                                    <label asp-for="Year">
                                        <i class="fas fa-calendar me-1"></i>Учебна година *
                                    </label>
                                    <span asp-validation-for="Year" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Description Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-success mb-3">
                                    <i class="fas fa-align-left me-2"></i>
                                    Описание
                                </h6>
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" 
                                              placeholder="Въведете описание на класа" 
                                              style="height: 100px"></textarea>
                                    <label asp-for="Description">
                                        <i class="fas fa-info-circle me-1"></i>Описание на класа
                                    </label>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        По желание - можете да добавите допълнителна информация за класа
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Options Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-success mb-3">
                                    <i class="fas fa-cogs me-2"></i>
                                    Допълнителни опции
                                </h6>
                                <div class="card border-success bg-light">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="autoAssignStudents" />
                                                    <label class="form-check-label fw-bold" for="autoAssignStudents">
                                                        <i class="fas fa-magic me-2"></i>
                                                        Автоматично присвояване на студенти
                                                    </label>
                                                    <div class="form-text">
                                                        <i class="fas fa-info-circle me-1"></i>
                                                        Студентите ще бъдат автоматично присвоени според годината
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="sendNotifications" />
                                                    <label class="form-check-label fw-bold" for="sendNotifications">
                                                        <i class="fas fa-bell me-2"></i>
                                                        Изпращане на известия
                                                    </label>
                                                    <div class="form-text">
                                                        <i class="fas fa-info-circle me-1"></i>
                                                        Студентите ще получат известие за новия клас
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                Полетата маркирани с * са задължителни
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="ClassGroups" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Отказ
                                </a>
                                <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                    <i class="fas fa-save me-2"></i>Създай клас
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Help Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-xl-8 col-lg-10">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-success mb-3">
                        <i class="fas fa-question-circle me-2"></i>
                        Помощ за създаване на клас
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled small">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Име на класа:</strong> Кратко и ясно име (напр. 10А)
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Учебна година:</strong> Година на записване в класа
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Описание:</strong> По желание за допълнителна информация
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled small">
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <strong>Съвет:</strong> Използвайте стандартни имена за класове
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <strong>Съвет:</strong> Годината трябва да съответства на текущата
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <strong>Съвет:</strong> След създаването можете да добавите студенти
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row justify-content-center mt-4">
        <div class="col-xl-8 col-lg-10">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-success mb-3">
                        <i class="fas fa-bolt me-2"></i>
                        Бързи действия
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-outline-info" onclick="fillSampleData()">
                                    <i class="fas fa-magic me-2"></i>
                                    Попълни с примерни данни
                                </button>
                                <button type="button" class="btn btn-outline-warning" onclick="clearForm()">
                                    <i class="fas fa-eraser me-2"></i>
                                    Изчисти формата
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-outline-secondary" onclick="showTemplates()">
                                    <i class="fas fa-copy me-2"></i>
                                    Шаблони за класове
                                </button>
                                <button type="button" class="btn btn-outline-primary" onclick="importFromExcel()">
                                    <i class="fas fa-file-excel me-2"></i>
                                    Импорт от Excel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Add form validation styling
            $('#createClassGroupForm').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Създава се...');
            });

            // Auto-generate year if not selected
            if (!$('#Year').val()) {
                $('#Year').val(new Date().getFullYear());
            }

            // Add keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === 's') {
                    e.preventDefault();
                    $('#createClassGroupForm').submit();
                }
                if (e.ctrlKey && e.key === 'Enter') {
                    e.preventDefault();
                    $('#createClassGroupForm').submit();
                }
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function fillSampleData() {
            $('#Name').val('10А');
            $('#Year').val(new Date().getFullYear());
            $('#Description').val('Десяти клас, профил А - Математика и Информатика');
            
            showNotification('Формата е попълнена с примерни данни', 'success');
        }

        function clearForm() {
            if (confirm('Сигурни ли сте, че искате да изчистите формата?')) {
                $('#createClassGroupForm')[0].reset();
                $('#Year').val(new Date().getFullYear());
                showNotification('Формата е изчистена', 'info');
            }
        }

        function showTemplates() {
            showNotification('Функцията за шаблони ще бъде имплементирана скоро', 'info');
        }

        function importFromExcel() {
            showNotification('Функцията за импорт от Excel ще бъде имплементирана скоро', 'info');
        }

        function showNotification(message, type = 'info') {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'warning' ? 'alert-warning' : 
                              type === 'error' ? 'alert-danger' : 'alert-info';
            
            const notification = $(`
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('.container-fluid').prepend(notification);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                notification.alert('close');
            }, 5000);
        }

        // Show keyboard shortcuts help
        console.log('Keyboard shortcuts: Ctrl+S = Submit form, Ctrl+Enter = Submit form');
    </script>
}
