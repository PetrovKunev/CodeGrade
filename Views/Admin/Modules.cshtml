@model List<CodeGrade.ViewModels.AdminModuleViewModel>
@{
    ViewData["Title"] = "Управление на модули";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-book-open text-warning me-2"></i>
                Управление на модули
            </h1>
            <p class="text-muted mb-0">Създаване, редактиране и управление на учебни модули в системата</p>
        </div>
        <a asp-action="CreateModule" class="btn btn-warning btn-lg shadow-sm">
            <i class="fas fa-plus me-2"></i>
            Нов модул
        </a>
    </div>

    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-light rounded p-3">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Admin")" class="text-decoration-none">
                    <i class="fas fa-home me-1"></i>Админ панел
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-book-open me-1"></i>Модули
            </li>
        </ol>
    </nav>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Общо модули
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book-open fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Общо задания
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Sum(m => m.AssignmentCount)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Среден размер на модул
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model.Count > 0 ? Math.Round((double)Model.Sum(m => m.AssignmentCount) / Model.Count, 1) : 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-bar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Активни семестри
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Select(m => m.Semester).Distinct().Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modules Table Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-warning">
                <i class="fas fa-list me-2"></i>
                Списък на модулите
            </h6>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportToCSV()">
                    <i class="fas fa-download me-1"></i>Експорт
                </button>
                <button type="button" class="btn btn-outline-info btn-sm" onclick="refreshTable()">
                    <i class="fas fa-sync-alt me-1"></i>Обнови
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="modulesTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 50px;">
                                <i class="fas fa-hashtag text-muted"></i>
                            </th>
                            <th>
                                <i class="fas fa-book me-1"></i>Модул
                            </th>
                            <th>
                                <i class="fas fa-info-circle me-1"></i>Описание
                            </th>
                            <th class="text-center">
                                <i class="fas fa-calendar me-1"></i>Семестър
                            </th>
                            <th class="text-center">
                                <i class="fas fa-tasks me-1"></i>Задания
                            </th>
                            <th>
                                <i class="fas fa-calendar-plus me-1"></i>Създаден
                            </th>
                            <th class="text-center" style="width: 200px;">
                                <i class="fas fa-cogs me-1"></i>Действия
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var module = Model[i];
                            <tr>
                                <td class="text-center text-muted">
                                    <small>@(i + 1)</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3">
                                            <div class="avatar-title bg-warning rounded-circle text-white fw-bold">
                                                @module.Name.Substring(0, Math.Min(2, module.Name.Length)).ToUpper()
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold text-warning">@module.Name</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-tag me-1"></i>ID: @module.Id
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(module.Description))
                                    {
                                        <span class="text-break">@module.Description</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Без описание</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary fs-6">@module.Semester</span>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <span class="badge bg-info fs-6 me-2">
                                            <i class="fas fa-tasks me-1"></i>@module.AssignmentCount
                                        </span>
                                        @if (module.AssignmentCount > 0)
                                        {
                                            <button type="button" 
                                                    class="btn btn-outline-info btn-sm" 
                                                    onclick="viewAssignments(@module.Id, '@module.Name')"
                                                    title="Преглед на заданията">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-calendar text-muted me-2"></i>
                                        <span>@module.CreatedAt.ToString("dd.MM.yyyy")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditModule" asp-route-id="@module.Id" 
                                           class="btn btn-outline-warning btn-sm" 
                                           title="Редактирай модул">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-outline-info btn-sm" 
                                                onclick="viewAssignments(@module.Id, '@module.Name')"
                                                title="Преглед на заданията">
                                            <i class="fas fa-tasks"></i>
                                        </button>
                                        <button type="button" 
                                                class="btn btn-outline-danger btn-sm" 
                                                onclick="deleteModule(@module.Id, '@module.Name', @module.AssignmentCount)"
                                                title="Изтрий модул">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Assignments Modal -->
<div class="modal fade" id="assignmentsModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-tasks me-2"></i>
                    Задания в модул: <span id="moduleNameInModal"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="assignmentsList" class="text-center">
                    <div class="spinner-border text-info" role="status">
                        <span class="visually-hidden">Зареждане...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Затвори
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Потвърждение за изтриване
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-book-dead fa-3x text-danger mb-3"></i>
                    <h6 class="text-danger">Сигурни ли сте?</h6>
                </div>
                <p class="mb-2">Искате да изтриете модула:</p>
                <div class="alert alert-warning">
                    <strong id="moduleNameToDelete"></strong>
                </div>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Внимание:</strong> Това действие не може да бъде отменено!
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Отказ
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Изтрий
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable with enhanced configuration
            $('#modulesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/bg.json'
                },
                order: [[1, 'asc']],
                pageLength: 25,
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [0, 6] }, // Disable sorting for index and actions columns
                    { className: 'text-center', targets: [0, 3, 4, 6] }
                ],
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                initComplete: function() {
                    // Add custom styling to DataTable elements
                    $('.dataTables_length select').addClass('form-select form-select-sm');
                    $('.dataTables_filter input').addClass('form-control form-control-sm');
                }
            });

            // Add row hover effects
            $('#modulesTable tbody tr').hover(
                function() { $(this).addClass('table-hover'); },
                function() { $(this).removeClass('table-hover'); }
            );
        });

        function viewAssignments(moduleId, moduleName) {
            document.getElementById('moduleNameInModal').textContent = moduleName;
            
            // Show loading spinner
            document.getElementById('assignmentsList').innerHTML = `
                <div class="spinner-border text-info" role="status">
                    <span class="visually-hidden">Зареждане...</span>
                </div>
            `;
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('assignmentsModal'));
            modal.show();
            
            // Fetch assignments data
            fetch(`/Admin/GetAssignmentsForModule/${moduleId}`)
                .then(response => response.json())
                .then(data => {
                    if (data && data.length > 0) {
                        let assignmentsHtml = '<div class="table-responsive"><table class="table table-hover">';
                        assignmentsHtml += '<thead class="table-light"><tr><th>Заглавие</th><th>Краен срок</th><th>Макс. точки</th><th>Статус</th></tr></thead><tbody>';
                        
                        data.forEach(assignment => {
                            const dueDate = new Date(assignment.dueDate);
                            const isOverdue = dueDate < new Date();
                            const statusClass = assignment.isActive ? 'bg-success' : 'bg-secondary';
                            const statusText = assignment.isActive ? 'Активно' : 'Неактивно';
                            
                            assignmentsHtml += `<tr>
                                <td>${assignment.title}</td>
                                <td class="${isOverdue ? 'text-danger' : ''}">${dueDate.toLocaleDateString('bg-BG')}</td>
                                <td>${assignment.maxPoints}</td>
                                <td><span class="badge ${statusClass}">${statusText}</span></td>
                            </tr>`;
                        });
                        
                        assignmentsHtml += '</tbody></table></div>';
                        document.getElementById('assignmentsList').innerHTML = assignmentsHtml;
                    } else {
                        document.getElementById('assignmentsList').innerHTML = `
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                В този модул няма задания.
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    document.getElementById('assignmentsList').innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Грешка при зареждане на заданията.
                        </div>
                    `;
                    console.error('Error:', error);
                });
        }

        function deleteModule(moduleId, moduleName, assignmentCount) {
            document.getElementById('moduleNameToDelete').textContent = moduleName;
            
            if (assignmentCount > 0) {
                // Ако има задания, показваме опциите за изтриване
                document.getElementById('deleteForm').innerHTML = `
                    <div class="text-center">
                        <div class="alert alert-warning mb-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Внимание:</strong> Този модул има ${assignmentCount} задания.
                        </div>
                        <div class="d-flex gap-2 justify-content-center">
                            <form asp-action="DeleteModule" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="${moduleId}" />
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-trash me-2"></i>Изтрий само модула
                                </button>
                            </form>
                            <form asp-action="DeleteModuleWithDependencies" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="${moduleId}" />
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('ВНИМАНИЕ: Това ще изтрие модула и ВСИЧКИ свързани данни (задания, решения, тестови случаи)! Сигурни ли сте?')">
                                    <i class="fas fa-trash-alt me-2"></i>Изтрий с зависимости
                                </button>
                            </form>
                        </div>
                    </div>
                `;
            } else {
                // Ако няма задания, показваме нормалния бутон за изтриване
                document.getElementById('deleteForm').innerHTML = `
                    <form asp-action="DeleteModule" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="${moduleId}" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Изтрий модула
                        </button>
                    </form>
                `;
            }
            
            // Show modal with animation
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        function exportToCSV() {
            // Simple CSV export functionality
            const table = document.getElementById('modulesTable');
            const rows = table.querySelectorAll('tbody tr');
            let csv = 'Модул,Описание,Семестър,Задания,Създаден\n';
            
            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                if (cells.length >= 7) {
                    const name = cells[1].textContent.trim();
                    const description = cells[2].textContent.trim();
                    const semester = cells[3].textContent.trim();
                    const assignments = cells[4].textContent.trim();
                    const created = cells[5].textContent.trim();
                    
                    csv += `"${name}","${description}","${semester}","${assignments}","${created}"\n`;
                }
            });
            
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'modules_export.csv';
            link.click();
        }

        function refreshTable() {
            location.reload();
        }

        // Add keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'n') {
                e.preventDefault();
                window.location.href = '@Url.Action("CreateModule")';
            }
        });

        // Show keyboard shortcuts help
        console.log('Keyboard shortcuts: Ctrl+N = New Module');
    </script>
}
