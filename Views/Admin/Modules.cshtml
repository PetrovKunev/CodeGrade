@model List<CodeGrade.ViewModels.AdminModuleViewModel>
@{
    ViewData["Title"] = "Управление на модули";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Управление на модули</h1>
        <a asp-action="CreateModule" class="btn btn-primary">
            <i class="fas fa-plus"></i> Нов модул
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Списък на модулите</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="modulesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Име на модула</th>
                            <th>Описание</th>
                            <th>Семестър</th>
                            <th>Брой задачи</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var module in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3">
                                            <div class="avatar-title bg-warning rounded-circle">
                                                <i class="fas fa-book"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@module.Name</h6>
                                            @if (!string.IsNullOrEmpty(module.Description))
                                            {
                                                <small class="text-muted">@module.Description</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(module.Description))
                                    {
                                        <span class="text-muted">@module.Description</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@module.Semester</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@module.AssignmentCount</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditModule" asp-route-id="@module.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                onclick="viewAssignments(@module.Id, '@module.Name')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="deleteModule(@module.Id, '@module.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Потвърждение за изтриване</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Сигурни ли сте, че искате да изтриете модула <strong id="moduleNameToDelete"></strong>?</p>
                <p class="text-danger">Това действие не може да бъде отменено!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Assignments View Modal -->
<div class="modal fade" id="assignmentsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Задачи в модула: <span id="moduleNameInModal"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="assignmentsList">
                    <!-- Assignments will be loaded here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Затвори</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#modulesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/bg.json'
                },
                order: [[2, 'asc'], [0, 'asc']],
                pageLength: 25,
                responsive: true
            });
        });

        function deleteModule(moduleId, moduleName) {
            document.getElementById('moduleNameToDelete').textContent = moduleName;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteModule")/' + moduleId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function viewAssignments(moduleId, moduleName) {
            document.getElementById('moduleNameInModal').textContent = moduleName;
            
            // Load assignments for this module
            $.get('@Url.Action("GetAssignmentsForModule")/' + moduleId, function(data) {
                var assignmentsHtml = '';
                if (data && data.length > 0) {
                    assignmentsHtml = '<div class="table-responsive"><table class="table table-sm">';
                    assignmentsHtml += '<thead><tr><th>Заглавие</th><th>Краен срок</th><th>Макс. точки</th><th>Статус</th></tr></thead><tbody>';
                    data.forEach(function(assignment) {
                        var statusBadge = assignment.isActive ? 
                            '<span class="badge bg-success">Активна</span>' : 
                            '<span class="badge bg-secondary">Неактивна</span>';
                        
                        var dueDate = assignment.dueDate ? 
                            new Date(assignment.dueDate).toLocaleDateString('bg-BG') : '-';
                        
                        assignmentsHtml += '<tr><td>' + assignment.title + '</td><td>' + dueDate + '</td><td>' + assignment.maxPoints + '</td><td>' + statusBadge + '</td></tr>';
                    });
                    assignmentsHtml += '</tbody></table></div>';
                } else {
                    assignmentsHtml = '<p class="text-muted">Няма задачи в този модул.</p>';
                }
                document.getElementById('assignmentsList').innerHTML = assignmentsHtml;
            });
            
            new bootstrap.Modal(document.getElementById('assignmentsModal')).show();
        }
    </script>
}
