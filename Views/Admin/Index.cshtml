@model IEnumerable<CodeGrade.Models.TeacherRegistrationCode>

@{
    ViewData["Title"] = "Администраторски панел";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Администраторски панел</h1>

        <!-- Генериране на нов код -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Генериране на код за преподавател</h2>
            <form asp-action="GenerateTeacherCode" method="post" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Описание</label>
                        <input type="text" id="description" name="description" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="Описание на кода" />
                    </div>
                    <div>
                        <label for="expiresInDays" class="block text-sm font-medium text-gray-700 mb-1">Изтича след (дни)</label>
                        <input type="number" id="expiresInDays" name="expiresInDays" min="1" max="365"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                               placeholder="30" />
                        <small class="text-gray-500">Оставете празно за безсрочен код</small>
                    </div>
                    <div class="flex items-end">
                        <button type="submit" 
                                class="w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            Генерирай код
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Списък с кодове -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-800">Кодове за регистрация на преподаватели</h2>
            </div>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md mx-6 mt-4">
                    @TempData["SuccessMessage"]
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mx-6 mt-4">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Код</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Описание</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Създаден</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Изтича</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Използван от</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var code in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded">@code.Code</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@code.Description</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @code.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @if (code.ExpiresAt.HasValue)
                                    {
                                        @code.ExpiresAt.Value.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">Безсрочен</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (code.IsActive)
                                    {
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            Активен
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            Неактивен
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @if (code.IsUsed)
                                    {
                                        <span class="text-gray-900">@code.UsedByUser?.Email</span>
                                        <br />
                                        <span class="text-xs text-gray-400">@code.UsedAt?.ToString("dd.MM.yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">Не е използван</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    @if (!code.IsUsed)
                                    {
                                        <form asp-action="DeleteTeacherCode" method="post" class="inline">
                                            <input type="hidden" name="id" value="@code.Id" />
                                            <button type="submit" 
                                                    class="text-red-600 hover:text-red-900"
                                                    onclick="return confirm('Сигурни ли сте, че искате да изтриете този код?')">
                                                Изтрий
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="px-6 py-8 text-center text-gray-500">
                    <p>Все още няма генерирани кодове.</p>
                </div>
            }
        </div>
    </div>
</div> 