@model List<CodeGrade.ViewModels.AdminUserViewModel>
@{
    ViewData["Title"] = "Управление на потребители";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Управление на потребители</h1>
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="fas fa-plus"></i> Нов потребител
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Списък на потребителите</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Име</th>
                            <th>Имейл</th>
                            <th>Потребителско име</th>
                            <th>Роли</th>
                            <th>Статус</th>
                            <th>Създаден</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3">
                                            <div class="avatar-title bg-primary rounded-circle">
                                                @user.FirstName[0]@user.LastName[0]
                                            </div>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@user.FullName</h6>
                                            <small class="text-muted">@user.PhoneNumber</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Активен</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Неактивен</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="deleteUser('@user.Id', '@user.FullName')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Потвърждение за изтриване</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Сигурни ли сте, че искате да изтриете потребителя <strong id="userNameToDelete"></strong>?</p>
                <p class="text-danger">Това действие не може да бъде отменено!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/bg.json'
                },
                order: [[0, 'asc']],
                pageLength: 25,
                responsive: true
            });
        });

        function deleteUser(userId, userName) {
            document.getElementById('userNameToDelete').textContent = userName;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteUser")/' + userId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
