@model CodeGrade.Models.Submission
@{
    ViewData["Title"] = "Създаване на оценка";
}

<div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Създаване на оценка</h2>
            <a href="/Submissions/Details/@Model.Id" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                <i class="fas fa-arrow-left mr-2"></i>
                Назад
            </a>
        </div>

        <!-- Информация за ученика и задачата -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Информация за ученика</h3>
                <div class="space-y-3">
                    <div>
                        <span class="text-sm font-medium text-gray-500">Име:</span>
                        <span class="ml-2 text-sm text-gray-900">
                            @if (Model.Student?.User != null)
                            {
                                @Model.Student.User.FirstName @Model.Student.User.LastName
                            }
                            else
                            {
                                <span class="text-gray-400">Няма данни</span>
                            }
                        </span>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500">Клас:</span>
                        <span class="ml-2 text-sm text-gray-900">
                            @if (Model.Student?.ClassGroup != null)
                            {
                                @($"{Model.Student.ClassGroup.Name} - {Model.Student.ClassNumber}")
                            }
                            else
                            {
                                <span class="text-gray-400">Няма данни</span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Информация за задачата</h3>
                <div class="space-y-3">
                    <div>
                        <span class="text-sm font-medium text-gray-500">Заглавие:</span>
                        <span class="ml-2 text-sm text-gray-900">@Model.Assignment?.Title</span>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500">Език:</span>
                        <span class="ml-2 text-sm text-gray-900">@Model.Assignment?.Language</span>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500">Статус:</span>
                        <span class="ml-2 text-sm text-gray-900">@Model.Status</span>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500">Подадено на:</span>
                        <span class="ml-2 text-sm text-gray-900">@Model.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Резултати от тестовете -->
        @if (Model.ExecutionResults != null && Model.ExecutionResults.Any())
        {
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Резултати от тестовете</h3>
                <div class="space-y-3">
                    @foreach (var result in Model.ExecutionResults)
                    {
                        <div class="bg-white p-4 rounded-lg border border-gray-200">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">
                                        Тест #@(result.TestCase?.Id ?? 0): @(result.TestCase?.Description ?? "Без описание")
                                    </h4>
                                    @if (!string.IsNullOrEmpty(result.TestCase?.Description))
                                    {
                                        <p class="text-sm text-gray-600 mt-1">@result.TestCase.Description</p>
                                    }
                            </div>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        @(result.Status == CodeGrade.Models.ExecutionStatus.Passed ? "bg-green-100 text-green-800" :
                                                                        result.Status == CodeGrade.Models.ExecutionStatus.Failed ? "bg-red-100 text-red-800" :
                                                                        "bg-yellow-100 text-yellow-800")">
                            @result.Status
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(result.ActualOutput))
                            {
                                <div class="mt-3">
                                    <span class="text-sm font-medium text-gray-500">Изход:</span>
                                    <pre class="mt-1 p-2 bg-gray-100 rounded text-sm text-gray-900 overflow-x-auto">@result.ActualOutput</pre>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Код на ученика -->
        @if (!string.IsNullOrEmpty(Model.Code))
        {
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Код на ученика</h3>
                <pre class="bg-gray-900 text-green-400 p-4 rounded overflow-x-auto text-sm">@Model.Code</pre>
            </div>
        }

        <!-- Форма за създаване на оценка -->
        <form asp-action="Create" asp-route-id="@Model.Id" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" name="StudentId" value="@Model.StudentId" />
            <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />

            <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Оценка</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="Points" class="block text-sm font-medium text-gray-700 mb-2">Точки (0-100) *</label>
                        <input id="Points" name="Points" type="number" min="0" max="100" step="1" required
                               value="@Model.Score"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                        <span class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label for="GradeValue" class="block text-sm font-medium text-gray-700 mb-2">6-бална оценка *</label>
                        <select id="GradeValue" name="GradeValue" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="">Избери оценка</option>
                            <option value="2.0">2.0 (Слаб)</option>
                            <option value="2.5">2.5</option>
                            <option value="3.0">3.0 (Среден)</option>
                            <option value="3.5">3.5</option>
                            <option value="4.0">4.0 (Добър)</option>
                            <option value="4.5">4.5</option>
                            <option value="5.0">5.0 (Много добър)</option>
                            <option value="5.5">5.5</option>
                            <option value="6.0">6.0 (Отличен)</option>
                        </select>
                        <span class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="mt-6">
                    <label for="Comments" class="block text-sm font-medium text-gray-700 mb-2">Коментари</label>
                    <textarea id="Comments" name="Comments" rows="4"
                              placeholder="Добавете коментари към оценката (по желание)"
                              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                    <span class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Бутони за действия -->
            <div class="flex justify-end space-x-3">
                <a href="/Submissions/Details/@Model.Id" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    Отказ
                </a>
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                    <i class="fas fa-star mr-2"></i>
                    Създай оценка
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-calculate grade value based on points
        document.getElementById('Points').addEventListener('input', function() {
            const points = parseInt(this.value);
            const gradeSelect = document.getElementById('GradeValue');

            if (points >= 0 && points <= 100) {
                let gradeValue;
                if (points >= 90) gradeValue = '6.0';
                else if (points >= 85) gradeValue = '5.5';
                else if (points >= 75) gradeValue = '5.0';
                else if (points >= 70) gradeValue = '4.5';
                else if (points >= 60) gradeValue = '4.0';
                else if (points >= 55) gradeValue = '3.5';
                else if (points >= 45) gradeValue = '3.0';
                else if (points >= 40) gradeValue = '2.5';
                else gradeValue = '2.0';

                gradeSelect.value = gradeValue;
            }
        });

        // Trigger calculation on page load if there's a score
        window.addEventListener('DOMContentLoaded', function() {
            const pointsInput = document.getElementById('Points');
            if (pointsInput.value) {
                pointsInput.dispatchEvent(new Event('input'));
            }
        });
    </script>
}