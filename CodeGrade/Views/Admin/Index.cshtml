@{
    ViewData["Title"] = "Администрация";
}

<div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Административен панел</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-users text-blue-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-blue-600">Ученици</p>
                        <p class="text-2xl font-bold text-blue-900">@ViewBag.TotalStudents</p>
                    </div>
                </div>
            </div>
            <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-chalkboard-teacher text-green-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-green-600">Учители</p>
                        <p class="text-2xl font-bold text-green-900">@ViewBag.TotalTeachers</p>
                    </div>
                </div>
            </div>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-tasks text-yellow-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-yellow-600">Задачи</p>
                        <p class="text-2xl font-bold text-yellow-900">@ViewBag.TotalAssignments</p>
                    </div>
                </div>
            </div>
            <div class="bg-purple-50 border border-purple-200 rounded-lg p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-file-code text-purple-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-purple-600">Решения</p>
                        <p class="text-2xl font-bold text-purple-900">@ViewBag.TotalSubmissions</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white border border-gray-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Бързи действия</h3>
                <div class="space-y-3">
                    <a href="/Admin/Users" class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-md transition-colors">
                        <i class="fas fa-user-cog text-indigo-600 mr-3"></i>
                        <span>Управление на потребители</span>
                    </a>
                    <a href="/Admin/Assignments" class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-md transition-colors">
                        <i class="fas fa-tasks text-indigo-600 mr-3"></i>
                        <span>Управление на задачи</span>
                    </a>
                    <a href="/Admin/Reports" class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-md transition-colors">
                        <i class="fas fa-chart-bar text-indigo-600 mr-3"></i>
                        <span>Отчети и статистики</span>
                    </a>
                    <a href="/Admin/Settings" class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-md transition-colors">
                        <i class="fas fa-cog text-indigo-600 mr-3"></i>
                        <span>Системни настройки</span>
                    </a>
                </div>
            </div>

            <div class="bg-white border border-gray-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Системна информация</h3>
                <div class="space-y-3">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Версия на системата:</span>
                        <span class="font-medium">1.0.0</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Последна актуализация:</span>
                        <span class="font-medium">@DateTime.Now.ToString("dd.MM.yyyy")</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-gray-600">Статус на системата:</span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <i class="fas fa-check mr-1"></i>Активна
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 